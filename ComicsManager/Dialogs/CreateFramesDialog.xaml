<Window x:Class="ComicsManager.Dialogs.CreateFramesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComicsManager.Dialogs"
        mc:Ignorable="d"
        Title="Создание кадров"
        Height="250"
        Width="450"
    >
    <DockPanel>
        <StackPanel
            DockPanel.Dock="Top"    
        >
            <TextBox
                x:Name="countFramesPerXLabel"    
                Margin="10"
                Width="275"
                Height="25"
            />
            <TextBox
                x:Name="countFramesPerYLabel"    
                Margin="10"
                Width="275"
                Height="25"
            />
            <TextBox
                x:Name="marginLabel"    
                Margin="10"
                Width="275"
                Height="25"/>
            <Button
                Margin="10"
                Width="275"
                Height="25"
                Content="Создать"    
                Click="CreateFramesHandler"
            />
        </StackPanel>
    </DockPanel>
</Window>
